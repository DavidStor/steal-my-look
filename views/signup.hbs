<div class="well login-box3 center-block">
  <form method="POST">
    <img class="logo" src="http://www.dallasarboretum.org/assets/img/instagram-word.png"></img>
    <input type="text" name="username" class="form-control" placeholder="Username">
    <input type="password" name="password" class="form-control" placeholder="Password">
    <input type="password" name="passwordRepeat" class="form-control" placeholder="Verify Password">
    <button class="btn1 btn-primary">Register</button>
  </form>
</div>

{{#each errors}}
    <center><div class="well2 alert alert-danger" role="alert">{{msg}}</div></center>
{{/each}}

<div class="well login-box2 center-block">
  <form class="" action="/login" method="GET">
    <h4>Already have an account?</h4>
    <button class="btn2 btn-success" href="/login">Log In</button>
  </form>
</div>



