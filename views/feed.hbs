<body>
  <main id="feed">
    {{#each posts}}
      <div class="photo" style="background-color: #f5f5f5">
          <header class="photo__header">
              <img src="/images/avatar-1533250464270.jpg" class="photo__avatar" />
              <div class="photo__user-info">
                  <span class="photo__author">{{post.fromUser}}</span>
              </div>
          </header>
          <center><img src="{{post.image}}" style="width: 500px"/></center>
          <div class="photo__info">
          </div>
          <!-- <form method="POST" action="/emoji/{{post._id}}"> -->
            <center><div>
              <form method="POST" action="/emoji/{{this._id}}/1">
                <button id="1"  style="margin-bottom: 10px; font-size:30px; background: red">😍</button>
              </form>
              <form method="POST" action="/emoji/{{this._id}}/2">
                <button id="2"  style="margin-bottom: 10px; font-size:30px; background: yellow">😐</button>
              </form>
              <form method="POST" action="/emoji/{{this._id}}/3">
                <button id="3"  style="margin-bottom: 10px; font-size:30px; background: green">😰</button>
              </form>
            </div></center>
           <!-- </form> -->
          <form method="GET" action="/wardrobe">
            <center><button class="btn1 btn-primary" style="margin-bottom: 10px; width: 300px">Steal My Look</button></center>
          </form>
      </div>
    {{/each}}
  </main>
</body>

<script>
  var smile = 0;
  var meh = 0;
  var no = 0;
  function myFunction1() {
    smile++;
    document.getElementById("1").innerHTML = "😍" + " " + smile;
  }
  function myFunction2() {
    meh++;
    document.getElementById("2").innerHTML = "😐" + " " + meh;
  }
  function myFunction3() {
    no++;
    document.getElementById("3").innerHTML = "😰" + " " + no;
  }
</script>
