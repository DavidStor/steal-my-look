<body>
  <main id="feed">
    {{#each posts}}
      <div class="photo" style="background-color: #f5f5f5;">
          <header class="photo__header">
              <img src="/images/{{user.profilePic}}" class="photo__avatar" style="padding-bottom: 20px;"/>
              <div class="photo__user-info">
                  <span class="photo__author" style="padding-bottom: 20px;">{{this.fromUser.username}}</span>
              </div>
          </header>
          <center><img class='rotate90' src="{{this.image}}" style="width: 600px; height: 550px;"/></center>
          <div class="photo__info">
          </div>
          <!-- <form method="POST" action="/emoji/{{post._id}}"> -->
          <!-- <div id="spacer"></div> -->
          <center><div style="margin-top: 20px;">
            <form style="clear: right; display: inline-block;" method="POST" action="/emoji/{{this._id}}/1">
              <button id="1"  style="border-radius: 40px; margin-bottom: 20px; margin-right: 40px; font-size:20px; background: red">😍 {{this.ratings.smileys}}</button>
            </form>
            <form style="clear: right; display: inline-block;" method="POST" action="/emoji/{{this._id}}/2">
              <button id="2"  style="border-radius: 40px; margin-bottom: 20px; margin-right: 40px; font-size:20px; background: yellow">😐 {{this.ratings.meh}}</button>
            </form>
            <form style="clear: right; display: inline-block;" method="POST" action="/emoji/{{this._id}}/3">
              <button id="3"  style=" border-radius: 40px; margin-bottom: 20px; font-size:20px; background: green">😰 {{this.ratings.frowns}}</button>
            </form>
          </div></center>
         <!-- </form> -->
          <form method="POST" action="/wardrobe/{{this.Look._id}}">
            <center><button class="btn1 btn-primary" style="margin-bottom: 10px; width: 300px">Steal My Look</button></center>
          </form>
      </div>
    {{/each}}
  </main>
</body>

<script>
  var smile = 0;
  var meh = 0;
  var no = 0;
  function myFunction1() {
    smile++;
    document.getElementById("1").innerHTML = "😍" + " " + smile;
  }
  function myFunction2() {
    meh++;
    document.getElementById("2").innerHTML = "😐" + " " + meh;
  }
  function myFunction3() {
    no++;
    document.getElementById("3").innerHTML = "😰" + " " + no;
  }

</script>
